<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="crud_users" namespace="/" extends="struts-default">
    	<action name="goto_admin_usuarios_jsp">
    		<result>WEB-INF/admin/crud_usuarios/admin_usuarios.jsp</result><!-- Reedirige al jsp de administraciÃ³n de usuarios -->
    	</action>
    	
		<action name="goto_alta_usuario_jsp" class="itesm.action_support.ControlarFormUsuario">
    		<result>WEB-INF/admin/crud_usuarios/altaUsuarios.jsp</result>
    	</action>
    	
    	<action name="goto_consulta_usuario_jsp" class="itesm.action_support.ListaUsuarios">
    		<result>WEB-INF/admin/crud_usuarios/listaUsuarios.jsp</result>
    	</action>
    	
 	    <action name="validar_campos_usuario" class="itesm.action_support.CapturarDatosUsuario">
    		<result name="success">WEB-INF/admin/crud_usuarios/usuarioRegistrado.jsp</result>
    		<result name="error">WEB-INF/admin/error.jsp</result>
    	</action>
    	
    	<action name="goto_alta_empleado_jsp" class="itesm.action_support.ControlarFormEmpleado">
    		<result name="success">WEB-INF/admin/crud_usuarios/altaEmpleado.jsp</result>
    	</action>
    	
    	<action name="goto_consulta_empleado_jsp" class="itesm.action_support.ListaEmpleados">
    		<result>WEB-INF/admin/crud_usuarios/listaEmpleado.jsp</result>
    	</action>
    	
    	<action name="validar_campos_empleado" class="itesm.action_support.CapturarDatosEmpleado">
    		<result name="success">WEB-INF/admin/crud_usuarios/empleadoRegistrado.jsp</result>
    		<result name="error"></result>
    	</action>
    	
    	<action name="goto_baja_jsp" >
    		<result>WEB-INF/admin/crud_usuarios/bajaUsuarios.jsp</result>
    	</action>
    	
    	<action name="buscar_usuario_baja" class="itesm.action_support.BuscarDatosUsuario">
    		<result name="success">WEB-INF/admin/crud_usuarios/datosBajaUsuario.jsp</result>
    		<result name="error">WEB-INF/admin/crud_usuarios/error.jsp</result>
    	</action>
    	
    	<action name="dar_baja_usuario" class="itesm.action_support.BajaUsuario">
    		<result name="success">WEB-INF/admin/crud_usuarios/bajaUsuarios.jsp</result>
    	</action>
    	
    	<action name="goto_editar_usuario_jsp">
    		<result>WEB-INF/admin/crud_usuarios/editarUsuario.jsp</result>
    	</action>
    	
    	<action name="buscar_usuario_editar" class="itesm.action_support.BuscarDatosUsuario">
    		<result name="success">WEB-INF/admin/crud_usuarios/datosEditarUsuario.jsp</result>
    		<result name="error">WEB-INF/admin/crud_usuarios/error.jsp</result>
    	</action>
    	
    	<action name="actualizar_usuario" class="itesm.action_support.EditarUsuario">
    		<result name="success">WEB-INF/admin/crud_usuarios/editarUsuario.jsp</result>
    	</action>
    		
    	<action name="goto_bloqueo_desbloqueo_jsp" class="itesm.action_support.editarStatusUsuario" method="init">
    		<result>WEB-INF/admin/crud_usuarios/validarIDStatus.jsp</result>
    	</action>
    	
    	<action name="modificarStatus" class="itesm.action_support.editarStatusUsuario">
    		<result name="success">/WEB-INF/admin/crud_usuarios/modificarStatusUsuario.jsp</result>
            <result name="error">/WEB-INF/admin/crud_usuarios/error.jsp</result>
    	</action>	
    	
    	<action name="finalMoficarStatus" class="itesm.action_support.editarStatusUsuario" method="show">
    		<result name="success">WEB-INF/admin/crud_usuarios/finEditarStatus.jsp</result>
    	</action>		

    </package>
</struts>